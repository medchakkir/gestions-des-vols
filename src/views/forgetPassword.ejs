<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="img/favicon.png" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />

    <!-- CSS Styles -->
    <link rel="stylesheet" href="css/_general.css" />
    <link rel="stylesheet" href="css/verification.css" />
    <title>Travel - Password Reset</title>
  </head>
  <body>
    <main class="auth-section">
      <div class="auth-container">
        <div class="auth-header">
          <h3>Réinitialisation du mot de passe</h3>
          <p>Entrez votre adresse email pour recevoir un lien de réinitialisation.</p>
        </div>
        <form class="auth-form">
          <div class="input-container">
            <label for="email">Adresse Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Entrez votre adresse email"
              required
            />
          </div>
          <input type="submit" value="Envoyer le lien" class="auth-btn" />
        </form>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        $("form").on("submit", function (e) {
          e.preventDefault();

          // Collect form data
          const formData = $(this).serializeArray();
          const entries = {};
          formData.forEach((field) => {
            entries[field.name] = field.value;
          });

          // Show loader
          Swal.fire({
            title: "Envoi en cours...",
            text: "Veuillez patienter pendant l'envoi du lien de réinitialisation.",
            allowOutsideClick: false,
            didOpen: () => {
              Swal.showLoading();
            },
          });

          // Perform AJAX request
          $.ajax({
            url: "/auth/forgot-password", // Endpoint for password reset request
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify(entries),
            success: function (data) {
              Swal.close(); // Close the loader
              if (data.error) {
                Swal.fire("Erreur!", data.error, "error");
              } else {
                Swal.fire(
                  "Succès!",
                  data.message,
                  "success"
                );
              }
            },
            error: function (xhr, status, error) {
              Swal.close(); // Close the loader
              const errorMessage =
                xhr.responseJSON?.error ||
                "Une erreur est survenue. Veuillez réessayer.";
              Swal.fire("Erreur!", errorMessage, "error");
            },
          });
        });
      });
    </script>
  </body>
</html>
